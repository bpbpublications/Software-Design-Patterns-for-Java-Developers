const h = require('http')
const f = require('fs')
const cr = '/var/www/website1/public'
const s = h.createServer((q, r) => {
  console.log(q.url)
  console.log(q.url.search(/\.\./))
  if (q.url.search(/\.\./) != -1)
    return r.end('bad file path!')
  const file = cr + q.url
  const data = f.readFileSync(file)
  r.end(data)
})
s.listen(12000)
